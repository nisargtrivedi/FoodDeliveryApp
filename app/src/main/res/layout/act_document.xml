<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kukdudelivery.util.TTextView
        android:id="@+id/tv"
        android:text="Documents"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/font_size_sixteen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"></com.kukdudelivery.util.TTextView>
    <View
        android:id="@+id/v"
        android:layout_below="@id/tv"
        android:layout_marginRight="@dimen/twenty_margin"
        android:layout_marginLeft="@dimen/twenty_margin"
        android:layout_marginTop="@dimen/ten_margin"
        android:background="#b6b6b6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/five_margin"
        android:layout_marginRight="@dimen/ten_margin"
        android:layout_marginLeft="@dimen/ten_margin"
        android:layout_below="@id/v"
        android:id="@+id/rvDocuments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>